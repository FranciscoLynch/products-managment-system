<div class="row">
    <div class="col-6"><h1>Products</h1></div>
    <div class="col-6 d-flex justify-content-end">
        <a href="/add" type="button" class="btn btn-dark align-self-center">+ add new product</a>
    </div>
</div>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Brand</th>
            <th scope="col">Product</th>
            <th scope="col">Destination</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            <th scope="col" class="text-end">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each rows}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.brand}}</td>
            <td>{{this.indumentaryType}}</td>
            <td>{{this.destination}}</td>
            <td>$ {{this.price}}</td>
            <td>{{this.stock}}</td>
            <td class="text-end">
                <a href="/view/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
                <a href="/edit/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
                <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-trash3"></i> Remove</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>